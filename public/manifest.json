{
  "manifest_version": 3,
  "name": "Whisper Notes",
  "version": "1.0",
  "description": "A note-taking app with speech-to-text capabilities",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Whisper Notes"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "microphone"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/pages/permission/index.html", "src/pages/permission/requestPermission.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}
